{
    "odata": {
        "version": "v4"
    },
    "build": {
        "target": "gen",
        "tasks": [
            {
                "src": "db",
                "for": "hana",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            },
            {
                "src": "srv",
                "for": "node-cf",
                "options": {
                    "model": [
                        "db",
                        "srv",
                        "app"
                    ]
                }
            },
            {
                "src": "app",
                "for": "fiori",
                "options": {
                    "model": [
                        "app"
                    ]
                }
            }
        ]
    },
    "auth": {
        "passport": {
            "strategy": "mock",
            "users": {
                "alice": {
                    "password": "123",
                    "ID": "alice",
                    "roles": [
                        "admin",
                        "authenticated-user"
                    ],
                    "xs.user.attributes": {
                        "currency": [
                            "USD"
                        ]
                    }
                },
                "bob": {
                    "password": "123",
                    "ID": "bob",
                    "roles": [
                        "authenticated-user"
                    ]
                }
            }
        }
    }
}

